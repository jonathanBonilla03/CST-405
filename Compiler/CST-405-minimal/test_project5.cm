// Project 5 - Demo for Eduardo and John
// Concise test demonstrating:
// - if, then, 
// - if, then, else
// - nested if statements
// - boolean expressions (&&, ||, !)

int main() {
    print("=== IF & RETRY Demo ===");
    print("");

    // Simple if-then
    int a;
    a = 5;
    output("a is ");
    print(a);
    if ((a > 6) || (a > 3)) {
        print("if-then: a > 3 is true, expected output");
        // Expected Output
    }

    // if-then-else
    if (!(a > 3)) {
        print("if-then-else: a < 3 (true branch), NOT expected output");
    } else {
        print("if-then-else: !(a < 3) is false -> else branch, expected output");
        // Expected Output
    }

    // Nested if
    int b;
    b = 10;
    output("b is ");
    print(b);
    if (a < b) {
        print("nested if: a < b is true, expected output");
        if (b == 10) {
            print("nested if: inner check b == 10 is true, expected output");
            // Expected Output
        } else {
            print("nested else, NOT expected output");
        }
    }

    // Boolean expressions
    bool cond;
    cond = (a <= 5) && (b >= 10);
    output("boolean expr (a <= 5 && b >= 10) => ");
    print(cond); // prints 1 for true, 0 for false
    // Expected Output: 1
    print("Expected: 1");

    print("");
    print("=== Demo complete ===");
    return 0;
}
